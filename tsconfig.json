{
  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,
    "noEmit": true,
    "outDir": "dist",
    "moduleResolution": "Node10",
    "declaration": true,
    "isolatedModules": true,
    "strictNullChecks": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
